<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".utils.fragments.FiltersFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="25dp"
        android:layout_marginHorizontal="20dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECCIONA EL JUEGO"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:gravity="center"/>


        <Spinner
            android:id="@+id/spinnerGames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:popupBackground="@color/purple_dark"
            android:overScrollMode="never">

        </Spinner>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SELECCIONA EL PERSONAJE"
            android:textStyle="bold"
            android:layout_marginTop="25dp"
            android:textColor="@color/white"
            android:textSize="22dp"
            android:gravity="center"/>

        <Spinner
            android:id="@+id/spinnerCharacters"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:popupBackground="@color/purple_dark"
            android:overScrollMode="never">

        </Spinner>


        <!-- BotÃ³n -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/buttonFilter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:layout_gravity="bottom"
            android:height="55dp"
            android:backgroundTint="@color/pink"
            android:text="FILTRAR"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:background="@drawable/rounded_button"/>


    </LinearLayout>



</FrameLayout>